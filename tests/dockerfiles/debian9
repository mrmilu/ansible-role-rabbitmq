FROM debian:stretch

RUN apt-get update -y && apt-get install -y --no-install-recommends \
    software-properties-common \
    build-essential \
    libffi-dev \
    libssl-dev \
    python3-dev \
    python3-pip \
    systemd \
 && rm -rf /var/lib/apt/lists/*

RUN pip3 install setuptools wheel
RUN pip3 install ansible

ENTRYPOINT ["/bin/systemd"]
